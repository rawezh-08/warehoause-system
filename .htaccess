# Basic security settings
Options -Indexes
AddDefaultCharset UTF-8

# Enable rewriting
RewriteEngine On
RewriteBase /

# Basic PHP handling
<FilesMatch "\.php$">
    SetHandler application/x-httpd-php
</FilesMatch>

# Allow access to necessary directories
RewriteCond %{REQUEST_URI} !^/Selling-System/src/(assets|css|js|uploads|controllers|views)/
RewriteRule ^ - [L]

# PHP settings for security
php_flag session.cookie_httponly on
php_flag session.use_only_cookies on 